<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wang.meetup.dao.mybatis.mysql.CategoryDao">
	<!-- Result Map -->
	<resultMap id="ResultMap" type="com.wang.meetup.dao.models.Category">
		<result column="id" property="id" />
		<result column="name" property="name" />
	</resultMap>
	
	<!-- Accounts table all fields -->
	<sql id="Column_List">
		id, name
	</sql>

	<sql id="Where_Clause">
		<where>
		<trim suffixOverrides=",">
			<if test="id != null and id != 0">
				id = #{id}
			</if>
			<if test="name != null and name != ''">
				and name = #{name}
			</if>
		</trim>
		</where>
	</sql>
	
	<insert id="insert" parameterType="com.wang.meetup.dao.models.Category" useGeneratedKeys="true" keyProperty="id">
		insert IGNORE into Categories(id,name) values(#{id},#{name})
	</insert>
	
	<select id="queryByExample" resultMap="ResultMap" parameterType="Object">
		SELECT
		<include refid="Column_List" />
		FROM Categories
		<include refid="Where_Clause" />
	</select>
</mapper>   
